  "commit-search-depth": 500,
  "release-search-depth": 400,
  "packages": {
    ".": {
      "release-type": "go",
      "pull-request-header": "I have created a release for you",
      "versioning": "always-bump-patch",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true
    }
  },
  "changelog": {
